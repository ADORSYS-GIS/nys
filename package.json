{
  "name": "mcp-client-fs237",
  "displayName": "VS Code MCP Client",
  "description": "A VS Code extension that implements a Model Control Protocol (MCP) client, similar to Cursor.",
  "version": "0.1.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/vscode-mcp-client"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "publisher": "Christian237",
  "description": "MCP Client extension for VS Code",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/vscode-mcp-client.git"
  },
  "homepage": "https://github.com/yourusername/vscode-mcp-client",
  "bugs": {
    "url": "https://github.com/yourusername/vscode-mcp-client/issues"
  },
  "keywords": ["mcp", "client", "ai", "websocket"],
  "categories": ["Other"],
  "activationEvents": ["*"],
  "icon": "images/icon.png",
  "main": "./out/extension.js",
  "browser": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mcpClient.connect",
        "title": "MCP Client: Connect to Server"
      },
      {
        "command": "mcpClient.executePrompt",
        "title": "MCP Client: Execute Prompt"
      },
      {
        "command": "mcpClient.disconnect",
        "title": "MCP Client: Disconnect"
      }
    ],
    "configuration": {
      "title": "MCP Client",
      "properties": {
        "mcpClient.serverUrl": {
          "type": "string",
          "default": "ws://localhost:8080",
          "description": "The WebSocket URL of the MCP server"
        },
        "mcpClient.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for authenticating with the MCP server"
        }
      }
    }
  },
  "capabilities": {
    "virtualWorkspaces": true,
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vscode-mcp-client.connect",
    "onCommand:vscode-mcp-client.executePrompt"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-mcp-client.connect",
        "title": "MCP: Connect to Server"
      },
      {
        "command": "vscode-mcp-client.disconnect",
        "title": "MCP: Disconnect"
      },
      {
        "command": "vscode-mcp-client.executePrompt",
        "title": "MCP: Execute Prompt"
      }
    ],
    "configuration": {
      "title": "MCP Client",
      "properties": {
        "mcpClient.serverUrl": {
          "type": "string",
          "default": "http://localhost:8080",
          "description": "URL of the MCP server"
        },
        "mcpClient.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for the LLM service"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "npx vsce package --no-dependencies --no-git-tag-version --no-update-package-json"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.37",
    "@types/vscode": "^1.60.0",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "glob": "^7.1.6",
    "mocha": "^8.3.2",
    "typescript": "^4.2.4",
    "vscode-test": "^1.5.2",
    "@vscode/vsce": "^2.19.0",
    "@azure/abort-controller": "1.0.0",
    "@azure/core-auth": "1.0.0",
    "@azure/core-client": "1.0.0",
    "@azure/core-rest-pipeline": "1.0.0",
    "@azure/core-tracing": "1.0.0"
  },
  "dependencies": {
      "@azure/core-util": "^1.0.0",
      "@azure/identity": "^1.0.0",
      "@azure/logger": "^1.0.0",
      "@azure/msal-browser": "^2.0.0",
      "@azure/msal-common": "^4.0.0",
      "@azure/msal-node": "^1.0.0",
      "@typespec/ts-http-runtime": "^0.1.0",
    "axios": "^1.4.0",
    "ws": "^8.13.0"
  }
}
